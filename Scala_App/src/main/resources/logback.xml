<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="logs" />
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <property name="RUN_DIR" value="${LOG_DIR}/run_${bySecond}" />

    <!-- Create the run directory with timestamp -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${RUN_DIR}/main.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure root logger -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

    <!-- Reduce noise from Spark -->
    <logger name="org.apache.spark" level="WARN" />
    <logger name="org.spark-project" level="WARN" />
    <logger name="org.apache.hadoop" level="WARN" />
</configuration>
