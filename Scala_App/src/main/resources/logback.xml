<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="logs" />
    <timestamp key="bySecond" datePattern="yyyyMMdd'T'HHmmss"/>

    <property name="RUN_DIR" value="${LOG_DIR}/run_${bySecond}" />

    <!-- Create the run directory with timestamp -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${RUN_DIR}/main.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console appender with simple level filter -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Configure root logger to log to FILE only -->
    <root level="DEBUG">
        <appender-ref ref="FILE" />
    </root>

    <!-- Configure specific loggers for your main classes -->
    <logger name="DeltaIndexerDriver" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="utils" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <logger name="llm" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Set 3rd party loggers to WARN level -->
    <logger name="org.apache" level="WARN" />
    <logger name="io.netty" level="WARN" />
    <logger name="org.sparkproject" level="WARN" />
</configuration>
